# resize hotkeys
bindsym $mod+Shift+Left     exec --no-startup-id $i3resize left
bindsym $mod+Shift+Down     exec --no-startup-id $i3resize down
bindsym $mod+Shift+Up       exec --no-startup-id $i3resize up
bindsym $mod+Shift+Right    exec --no-startup-id $i3resize right


